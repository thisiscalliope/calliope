<% @wrapper_id = 'wrapper_long' %>
<%= error_messages_for :user %>
<%= error_messages_for :checkout %>
<h3><%= t("registration")%></h3>
<div id="registration">
  <div id="account">
    <%= render :file => 'users/new' %>
  </div>
  <% if Spree::Config[:allow_guest_checkout] %>
    <div id="guest_checkout">
      <%= render 'guest_checkout' %>
    </div>
  <% end %>
</div>
